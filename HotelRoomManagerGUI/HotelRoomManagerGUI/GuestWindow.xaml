<Window x:Class="HotelRoomManagerGUI.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelRoomManagerGUI"
        mc:Ignorable="d"
        Title="OsobaWindow" Height="340" Width="354"
        WindowStartupLocation="CenterOwner"
ResizeMode="NoResize">
    <Grid d:IsLocked="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TxtPESEL" HorizontalAlignment="Left" Margin="105,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223" Height="27"/>
        <TextBox x:Name="TxtImie" HorizontalAlignment="Left" Margin="105,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223" Height="27"/>
        <TextBox x:Name="TxtNazwisko" HorizontalAlignment="Left" Margin="105,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223" Height="27"/>
        <TextBox x:Name="TxtDataZameldowania" HorizontalAlignment="Left" Margin="105,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223" Height="27"/>
        <TextBox x:Name="TxtDataWymeldowania" HorizontalAlignment="Left" Margin="105,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223" Height="27"/>
        <Label Content="PESEL" HorizontalAlignment="Left" Margin="59,29,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Imię" HorizontalAlignment="Left" Margin="67,60,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Nazwisko" HorizontalAlignment="Left" Margin="40,91,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Zameldowanie" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Height="26"/>
        <Label Content="Pokój" HorizontalAlignment="Left" Margin="61,188,0,0" VerticalAlignment="Top" Height="26"/>
        <ComboBox x:Name="CmbPokoj" HorizontalAlignment="Left" Margin="105,189,0,0" VerticalAlignment="Top" Width="223" Height="28">        </ComboBox>
        <Label Content="Wymeldowanie" HorizontalAlignment="Left" Margin="8,157,0,0" VerticalAlignment="Top" Height="26"/>
        <Button x:Name="BtnZatwierdz" Content="Zatwierdź" HorizontalAlignment="Left" Margin="10,267,0,0" VerticalAlignment="Top" Height="26" Width="150" Click="BtnZatwierdz_Click"/>
        <Button x:Name="BtnAnuluj" Content="Anuluj" HorizontalAlignment="Left" Margin="178,267,0,0" VerticalAlignment="Top" Height="26" Width="150" Click="BtnAnuluj_Click"/>

    </Grid>
</Window>
