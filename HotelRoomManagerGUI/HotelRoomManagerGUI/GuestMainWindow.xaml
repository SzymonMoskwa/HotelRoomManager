<Page x:Name="StatusBarBottomG" x:Class="HotelRoomManagerGUI.GuestMainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:HotelRoomManagerGUI"
      mc:Ignorable="d"
      Title="Goście" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="31"/>
        </Grid.RowDefinitions>

        <Label Content="Lista gości" HorizontalAlignment="Center" Margin="0,71,0,0" VerticalAlignment="Top" Height="31" Width="780" FontWeight="Bold" Foreground="White" Background="#784330"/>

        <Button x:Name="BtnDodaj" Content="Dodaj" HorizontalAlignment="Left" Margin="10,113,0,0" VerticalAlignment="Top" Height="27" Width="90" Click="BtnDodaj_Click"/>
        <Button x:Name="BtnUsun" Content="Usuń" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" Height="27" Width="90" Click="BtnUsun_Click"/>
        <Button x:Name="BtnSortuj" Content="Sortuj" HorizontalAlignment="Left" Margin="10,177,0,0" VerticalAlignment="Top" Height="27" Width="90" Click="BtnSortuj_Click"/>
        <Button x:Name="BtnSortPoPesel" Content="Sortuj po Pesel" HorizontalAlignment="Left" Margin="10,209,0,0" VerticalAlignment="Top" Height="27" Width="90" Click="BtnSortPoPesel_Click"/>
        <Button x:Name="BtnZmienGoscia" Content="Zmień" HorizontalAlignment="Left" Margin="10,241,0,0" VerticalAlignment="Top" Height="27" Width="90" Click="BtnZmienGoscia_Click"/>

        <Label Content="Hotel" HorizontalAlignment="Left" Margin="205,27,0,0" VerticalAlignment="Top" Height="26" Width="39"/>
        <TextBox x:Name="TxtNazwaHotelu" HorizontalAlignment="Center" Height="26" Margin="0,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302"/>

        <ListBox x:Name="listGoscie" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="105,113,10,2" SelectionMode="Multiple"/>

        <DockPanel Grid.RowSpan="2" VerticalAlignment="Top">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Plik">
                    <MenuItem Header="_Otwórz">
                        <MenuItem Header="Z pliku _XML" Click="MenuOtworzXml_Click"/>
                        <MenuItem Header="Z bazy _danych" Click="MenuOtworzDb_Click"/>
                    </MenuItem>
                    <MenuItem Header="_Zapisz">
                        <MenuItem Header="Do pliku _XML" Click="MenuZapiszXml_Click"/>
                        <MenuItem Header="Do bazy _danych" Click="MenuZapiszDb_Click"/>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>

        <Button x:Name="BtnWroc" Content="Wróć" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,0,0,0" Height="20" Width="70" Background="#D3D3D3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" FontSize="10" Click="BtnWroc_Click"/>

        <StatusBar Grid.Row="1" Background="#784330" Foreground="White">
            <TextBlock x:Name="StatusText" Text="Gotowy" Margin="10,0,0,0"/>
        </StatusBar>
    </Grid>
</Page>