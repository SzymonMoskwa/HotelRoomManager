<Window x:Class="HotelRoomManagerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="av"
        Title="HotelRoomManager" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen" 
        Background="#F0F0F0"
        Closing="Window_Closing">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Panel.ZIndex="2" av:IsLocked="True"/>
        <StackPanel x:Name="MainMenuPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Panel.ZIndex="1" Width="550" Height="450">
            <TextBlock Text="MENU GŁÓWNE" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,50,0,40" Foreground="#784330" av:IsLocked="True"/>
            <Button x:Name="BtnPokoje" Content="Zarządzanie Pokojami" Width="250" Height="50" Margin="0,10" Background="#784330" Foreground="White" FontSize="16" FontWeight="SemiBold" Click="BtnPokoje_Click" av:IsLocked="True"/>
            <Button x:Name="BtnGoscie" Content="Zarządzanie Gośćmi" Width="250" Height="50" Margin="0,10" Background="#784330" Foreground="White" FontSize="16" FontWeight="SemiBold" Click="BtnGoscie_Click" av:IsLocked="True"/>
            <Button x:Name="BtnWyjdz" Content="Wyjdź z programu"  Width="150" Height="35" Margin="0,20,0,0" Background="Gray" Foreground="White" Click="BtnWyjdz_Click" av:IsLocked="True"/>
            <MediaElement x:Name="GifPlayer" 
                  Source="Media/continuous-door.gif" 
                  LoadedBehavior="Play" UnloadedBehavior="Manual"
                  Stretch="Uniform" Width="100" Height="100" HorizontalAlignment="Right" Margin="10"
                  MediaEnded="GifPlayer_MediaEnded" av:IsLocked="True" />
        </StackPanel>
        <MediaElement x:Name="GifPlayer2" 
                  Source="Media/door-doors.gif" 
                  LoadedBehavior="Play" UnloadedBehavior="Manual" Stretch="Uniform"
                  MediaEnded="GifPlayer_MediaEnded" Width="100" Height="100" HorizontalAlignment="Left" Margin="10,324,0,26" />
    </Grid>
</Window>